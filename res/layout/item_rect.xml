<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:background="@drawable/back_mesh"
        android:layout_height="100dp" >

        <View
            android:id="@+id/rect_left"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/blue_rect_bg" />

        <View
            android:id="@+id/rect_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/rect_right" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rect_left"
            android:layout_alignLeft="@+id/rect_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/rect_left"
            android:layout_alignTop="@+id/rect_left"
            android:gravity="center"
            android:padding="5dp"
            android:text="忆盈楼"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="85dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_star"
            android:gravity="center"
            android:text="火"
            android:textColor="#ff0066"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rect_right"
            android:layout_alignLeft="@+id/rect_right"
            android:layout_alignRight="@+id/rect_right"
            android:layout_alignTop="@+id/rect_right"
            android:gravity="center"
            android:padding="5dp"
            android:text="金蛇漫舞  落雁峰 \n青萝山  无极道场\n三星望月 飞星遁影"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</LinearLayout>